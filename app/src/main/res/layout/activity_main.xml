<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alert.Activity.MainActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvAddAlarm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scale_60dp"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/scale_10dp"
        android:layout_margin="@dimen/scale_10dp"
        card_view:cardCornerRadius="@dimen/scale_2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint=""
                android:padding="@dimen/scale_3dp"
                android:text="Set an Alarm"
                android:textColor="@color/app_text"
                android:textSize="@dimen/txt_14" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lvAlarms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvAddAlarm"
        android:visibility="visible"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
