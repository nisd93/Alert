<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_layout_design_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/scale_10dp">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set an Alarm"
            android:textColor="@color/app_text"
            android:textSize="@dimen/txt_16"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/scale_15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/scale_3dp"
            android:text="Title"
            android:textColor="@color/app_text"
            android:textSize="@dimen/txt_16" />

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="Please enter title"
            android:inputType="text"
            android:maxLines="1"
            android:paddingEnd="@dimen/scale_3dp"
            android:paddingStart="@dimen/scale_3dp"
            android:text=""
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_17" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/scale_3dp"
            android:text="Time"
            android:textColor="@color/app_text"
            android:textSize="@dimen/txt_16" />

        <EditText
            android:id="@+id/edtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="Please enter time"
            android:inputType="text"
            android:paddingEnd="@dimen/scale_3dp"
            android:paddingStart="@dimen/scale_3dp"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/txt_17" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cvAdd"
            android:layout_width="@dimen/scale_60dp"
            android:layout_height="@dimen/scale_30dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/scale_5dp"
            android:layout_marginTop="@dimen/scale_5dp"
            android:padding="@dimen/scale_5dp"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_12" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>